@page "/"
@inject NavigationManager NavManager
@code {
    [CascadingParameter]
    public GlobalState state { get; set; }

    protected override void OnInitialized()
    {
        if (state.CurrentUser == null)
        {
            NavManager.NavigateTo("/login");
        }
        else
        {
            NavManager.NavigateTo("/todos");
        }
    }
}
